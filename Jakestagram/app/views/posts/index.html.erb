<h1>Jakestagram</h1>


<% if user_signed_in? %>
<p>Signed in as: <%= current_user.email %> </p>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>

<% else %>

<%= link_to('Login', new_user_session_path) %>

<% end %>

<hr>

<h2>Posts</h2>

<% @posts.each do |post| %>
<p><%= post.text %></p>
<p><%= link_to 'View Post', post_path(post) %></p>
<% if post.post_picture.attached? %>
<img src="<%= (url_for (post.gallery_view)) %>" alt="">
<% end %>
<% end %>
